<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context.xsd">
           
          <bean id="employee" class="com.korolija.model.Employee" autowire="constructor">
          <constructor-arg name="employeeId" value="192345"></constructor-arg>
          <constructor-arg name="employeeName" value="Stefan Korolija"></constructor-arg>
          <constructor-arg name="email" value="stefankorolija@gmail.com"></constructor-arg>
          
          <!--  <property name="pancard" ref="pancard"></property> zamena za ovo je autowire="byName" u bean zaglavlju-->
          </bean>
          
          <bean id="pancard1" class="com.korolija.model.Pancard">
          <property name="panHolderName" value="Stefan Korolija"></property>
          <property name="panNo" value="Kor1991"></property>
          </bean>
      
          
          
           
 </beans>